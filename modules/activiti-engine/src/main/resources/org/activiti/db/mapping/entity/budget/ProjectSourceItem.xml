  <sql id="selectProjectSourceItemByQueryCriteriaSql">
    from ${prefix}ACT_BUDGET_PROJECTSOURCEITEM RES 
    <where>
      <if test="id != null">
        RES.ID_ = #{id}
      </if>
      <if test="idProject != null">
        and RES.IDPROJECT_ = #{idProject}
      </if> 
      <if test="idSource != null">
        and RES.IDSOURCE_ = #{idSource}
