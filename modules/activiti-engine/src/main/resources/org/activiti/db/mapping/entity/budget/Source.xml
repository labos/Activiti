<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
  
<mapper namespace="org.activiti.engine.impl.persistence.entity.budget.SourceEntity">

  <!-- SOURCE INSERT -->

  <insert id="insertSource" parameterType="org.activiti.engine.impl.persistence.entity.budget.SourceEntity">
    insert into ${prefix}ACT_BUDGET_SOURCE (ID_, REV_, NAME_, TOTAL_)
    values (
      #{id ,jdbcType=VARCHAR},
      1, 
      #{name ,jdbcType=VARCHAR},
      #{total ,jdbcType=DOUBLE}
    )
  </insert>

  <!-- SOURCE UPDATE -->
  
  <update id="updateSource" parameterType="org.activiti.engine.impl.persistence.entity.budget.SourceEntity">
    update ${prefix}ACT_BUDGET_SOURCE set
      REV_ = #{revisionNext ,jdbcType=INTEGER},
      NAME_ = #{name ,jdbcType=VARCHAR},
      TOTAL_ = #{total ,jdbcType=DOUBLE}
    where ID_ = #{id}
       and REV_ = #{revision}
  </update>

  <!-- SOURCE RESULTMAP -->

  <resultMap id="sourceResultMap" type="org.activiti.engine.impl.persistence.entity.budget.SourceEntity">
    <id property="id" column="ID_" jdbcType="VARCHAR" />
    <result property="revision" column="REV_" jdbcType="INTEGER" />
    <result property="name" column="NAME_" jdbcType="VARCHAR" />
    <result property="total" column="TOTAL_" jdbcType="DOUBLE" />
  </resultMap>
  
  <!-- SOURCE SELECT -->

  <select id="selectSourceById" parameterType="string" resultMap="sourceResultMap">
    select * from ${prefix}ACT_BUDGET_SOURCE where ID_ = #{id,jdbcType=VARCHAR}
  </select>
    
  <select id="selectSourceByQueryCriteria" parameterType="org.activiti.engine.impl.budget.SourceQueryImpl" resultMap="sourceResultMap">
  	${limitBefore}
    select RES.* ${limitBetween}
    <include refid="selectSourceByQueryCriteriaSql" />
    ${orderBy}
    ${limitAfter}
  </select>
  
   <select id="selectSourceCountByQueryCriteria" parameterType="org.activiti.engine.impl.budget.SourceQueryImpl" resultType="long">
    select count(RES.ID_)
    <include refid="selectSourceByQueryCriteriaSql" />
  </select>
  
  <sql id="selectSourceByQueryCriteriaSql">
    from ${prefix}ACT_BUDGET_SOURCE RES 
    <where>
      <if test="id != null">
        RES.ID_ = #{id}
      </if>
      <if test="name != null">
        and RES.NAME_ = #{name}
      </if> 
      <if test="total != null">
        and RES.TOTAL_ = #{total}
      </if>     
    </where>
  </sql>
  
</mapper>