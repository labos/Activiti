<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
  
<mapper namespace="org.activiti.engine.impl.persistence.entity.budget.CostEntryEntity">

  <!-- COST ENTRY INSERT -->

  <insert id="insertCostEntry" parameterType="org.activiti.engine.impl.persistence.entity.budget.CostEntryEntity">
    insert into ${prefix}ACT_BUDGET_COSTENTRY (ID_, REV_, NAME_)
    values (
      #{id ,jdbcType=VARCHAR},
      1, 
      #{name ,jdbcType=VARCHAR}
    )
  </insert>

  <!-- COST ENTRY UPDATE -->
  
  <update id="updateCostEntry" parameterType="org.activiti.engine.impl.persistence.entity.budget.CostEntryEntity">
    update ${prefix}ACT_BUDGET_COSTENTRY set
      REV_ = #{revisionNext ,jdbcType=INTEGER},
      NAME_ = #{name ,jdbcType=VARCHAR}
    where ID_ = #{id}
       and REV_ = #{revision}
  </update>

  <!-- COST ENTRY RESULTMAP -->

  <resultMap id="costEntryResultMap" type="org.activiti.engine.impl.persistence.entity.budget.CostEntryEntity">
    <id property="id" column="ID_" jdbcType="VARCHAR" />
    <result property="revision" column="REV_" jdbcType="INTEGER" />
    <result property="name" column="NAME_" jdbcType="VARCHAR" />
  </resultMap>
  
  <!-- COST ENTRY SELECT -->

  <select id="selectCostEntryById" parameterType="string" resultMap="costEntryResultMap">
    select * from ${prefix}ACT_BUDGET_COSTENTRY where ID_ = #{id,jdbcType=VARCHAR}
  </select>
    
  <select id="selectCostEntryByQueryCriteria" parameterType="org.activiti.engine.impl.budget.CostEntryQueryImpl" resultMap="costEntryResultMap">
  	${limitBefore}
    select RES.* ${limitBetween}
    <include refid="selectCostEntryByQueryCriteriaSql" />
    ${orderBy}
    ${limitAfter}
  </select>
  
   <select id="selectCostEntryCountByQueryCriteria" parameterType="org.activiti.engine.impl.budget.CostEntryQueryImpl" resultType="long">
    select count(RES.ID_)
    <include refid="selectCostEntryByQueryCriteriaSql" />
  </select>
  
  <sql id="selectCostEntryByQueryCriteriaSql">
    from ${prefix}ACT_BUDGET_COSTENTRY RES 
    <where>
      <if test="id != null">
        RES.ID_ = #{id}
      </if>
      <if test="name != null">
        and RES.NAME_ = #{name}
      </if>    
    </where>
  </sql>
  
</mapper>